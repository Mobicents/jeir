		<!-- JBoss AS Security -->
		<dependency>
			<groupId>org.jboss.jbossas</groupId>
			<artifactId>jboss-as-security</artifactId>
			<version>${jboss.version}</version>
		</dependency>
		<dependency>
			<groupId>org.jboss.security</groupId>
			<artifactId>jboss-security-spi</artifactId>
			<version>2.0.3.SP1</version>
		</dependency>
		
		<!-- SS7 CLI -->
		
		<!-- jreadline -->
		<dependency>
			<groupId>org.jboss.jreadline</groupId>
			<artifactId>jreadline</artifactId>
			<version>0.17</version>
			<scope>runtime</scope>
		</dependency>
		
		<!-- M3UA CLI -->
		<dependency>
			<groupId>org.mobicents.protocols.ss7.m3ua</groupId>
			<artifactId>m3ua-cli-sctp</artifactId>
			<version>${ss7.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.mobicents.protocols.ss7.m3ua</groupId>
			<artifactId>m3ua-cli-m3ua</artifactId>
			<version>${ss7.version}</version>
			<scope>runtime</scope>
		</dependency>

		<!-- SCCP CLI -->
		<dependency>
			<groupId>org.mobicents.protocols.ss7.sccp</groupId>
			<artifactId>sccp-cli</artifactId>
			<version>${ss7.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<artifactId>shell-server-api</artifactId>
			<groupId>org.mobicents.protocols.ss7.management</groupId>
			<version>${ss7.version}</version>
		</dependency>
		<dependency>
			<artifactId>shell-server-impl</artifactId>
			<groupId>org.mobicents.protocols.ss7.management</groupId>
			<version>${ss7.version}</version>
